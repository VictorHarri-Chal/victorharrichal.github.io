<% case params[:id] %>
<% when 'nutri-flow' %>
  <%= render 'nutri_flow' %>
<% when 'nestio-bnb' %>
  <%= render 'nestio_bnb' %>
<% when 'scandela' %>
  <%= render 'scandela' %>
<% else %>
  <section class="max-w-3xl">
    <div class="text-center">
      <h1 class="text-4xl font-bold mb-4">Project not found</h1>
      <p class="text-neutral-400 mb-6">The project you are looking for does not exist.</p>
      <%= link_to "Back to projects", projects_path, class: "text-white hover:text-purple-400 transition-colors duration-300 font-medium" %>
    </div>
  </section>
<% end %>
